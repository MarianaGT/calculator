    <%= f.input :jamon_puerco, label: "Jamon de puerco" %>
    <%= f.input :salchicha_pavo, label: "Salchicha de pavo" %>
    <%#= f.input :valores_embutidos, label: "¿Qué embutidos sueles consumir?", as: :check_boxes, collection: [['Jamon de pavo', 36.0], ['Jamon de puerco', 20.0], ['Salchicha de pavo', 21.2]] %>
