          collection: [['no consumo', 'No consumo'], ['organico', 'Mercado / tianguis'], ['intensivo', 'Supermercados']],
          label_method: :second,
          value_method: :first,
          item_wrapper_class: "btn btn-outline-danger btn-group px-2 m-2"
        %>
      </div>
      <h5 class="text-white text-center pb-1 pt-3">Leche</h5>
      <div class="d-flex justify-content-center">
        <%= f.input :origen_leche,
          as: :radio_buttons,
          collection: [['no consumo', 'No consumo'], ['organico', 'Mercado / tianguis'], ['intensivo', 'Supermercados']],
          label_method: :second,
          value_method: :first,
          item_wrapper_class: "btn btn-outline-danger btn-group px-2 m-2"
        %>
      </div>
      <h5 class="text-white text-center pb-1 pt-3">Cereales (tortilla, arroz, avena)</h5>
      <div class="d-flex justify-content-center">
        <%= f.input :origen_cereales,
          as: :radio_buttons,
          collection: [['no consumo', 'No consumo'], ['organico', 'Mercado / tianguis'], ['intensivo', 'Supermercados']],
          label_method: :second,
          value_method: :first,
          item_wrapper_class: "btn btn-outline-danger btn-group px-2 m-2"
        %>
      </div>
      <button class="btn btn-danger rounded-circle mt-3 float-right mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#persona_actividad" aria-expanded="false" aria-controls="persona_actividad">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </button>
    </div>

