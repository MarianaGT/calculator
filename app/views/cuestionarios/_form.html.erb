
<div data-controller="cuestionario">
  <%= simple_form_for(@cuestionario, input_html:{novalidate: true, "data-target" => "cuestionario.form","data-action"=>"ajax:beforeSend->form#submitForm", local: false}) do |f| %>
    <div class="text-lg-start form-inputs p-3">
      <h2 class="pb-1 pt-3">Información general</h2>
      <hr class="pb-1" color="#013220"/>
      <div id="email">
        <h3 class="pb-1 pt-3">
          <span class="material-symbols-outlined p-1"> mail </span>
          Correo electrónico*
        </h3>
        <%= f.input :email, required: true, pattern: "/^[A-Za-z0-9+_.-]+@[A-Za-z0-9.-]+$/",
                    label: false,
                    placeholder: "juanperez@gmail.com",
                    input_html: {"data-target":"cuestionario.questions"}

        %>

      </div>

      <div  id="nombre">
        <h3 class="pb-1 pt-3">
          <span class="material-symbols-outlined p-1"> face </span>
          Nombre (opcional)
        </h3>
        <%= f.input :nombre,
                    label: false,
                    placeholder: "Nombre"
        %>
      </div>

      <div id="edad">
        <h3 class="pb-1 pt-3">
          <span class="material-symbols-outlined p-1"> sentiment_satisfied </span>
          Edad
        </h3>
        <%= f.input :edad,
                    label: false,
                    placeholder: "14"
        %>
      </div>

      <div id="sexo">
        <h3 class="pb-1 pt-3">
          <span class="material-symbols-outlined p-1"> diversity_3 </span>
          Sexo
        </h3>
        <%= f.input :sexo,
                    label: false,
                    as: :radio_buttons,
                    collection: [['femenino', 'Femenino'],['masculino', 'Masculino']],
                    label_method: :second,
                    value_method: :first,
                    item_wrapper_class: "btn btn-outline-dark btn-group px-2 mx-2"
        %>
      </div>

      <div  id="escolaridad">
        <div class="form_radio-group">
          <h3 class="pb-1 pt-3">
            <span class="material-symbols-outlined p-1"> school </span>
            Escolaridad
          </h3>
          <%= f.input :escolaridad,
                      as: :radio_buttons,
                      collection: [['Primaria', 'Primaria'], ['Secundaria', 'Secundaria'], ['Preparatoria', 'Preparatoria'], ['Universidad', 'Universidad'], ['Postgrado', 'Postgrado']],
