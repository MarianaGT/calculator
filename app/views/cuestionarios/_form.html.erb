        collection: [[0.0, '0'], [1.0, '1'], [2.5, '2-3'], [4.5, '4-5'], [7.0, '7'], [0.25, '1 vez al mes']],
        label_method: :second,
        value_method: :first,
        item_wrapper_class: "btn btn-outline-danger btn-group px-2 m-2"
      %>
      </div>
      <h5 class="text-white text-center pb-1 pt-3">Salmón</h5>
      <div class="d-flex justify-content-center">
      <%= f.input :frecuencia_salmon,
        as: :radio_buttons,
        collection: [[0.0, '0'], [1.0, '1'], [2.5, '2-3'], [4.5, '4-5'], [7.0, '7'], [0.25, '1 vez al mes']],
        label_method: :second,
        value_method: :first,
        item_wrapper_class: "btn btn-outline-danger btn-group px-2 m-2"
      %>
      </div>
      <h5 class="text-white text-center pb-1 pt-3">Atún enlatado</h5>
      <div class="d-flex justify-content-center">
      <%= f.input :frecuencia_atun,
        as: :radio_buttons, collection: [[0.0, '0'], [1.0, '1'], [2.5, '2-3'], [4.5, '4-5'], [7.0, '7'], [0.25, '1 vez al mes']],
        label_method: :second,
        value_method: :first,
        item_wrapper_class: "btn btn-outline-danger btn-group px-2 m-2"
      %>
      </div>
      <h5 class="text-white text-center pb-1 pt-3">Leche de vaca</h5>
