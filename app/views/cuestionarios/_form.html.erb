
<%= simple_form_for(@cuestionario) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs p-3">
    <div>
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> mail </span>
        <span class="pr-1 text-success">.</span>
        Correo electrónico
      </h3>
      <%= f.input :email,
        label: false,
        placeholder: "|...",
        input_html: { class: "bg-input"}
      %>
      <a class="btn btn-danger rounded-circle mt-3 mr-auto mb-3" data-bs-toggle="collapse" href="#nombre" aria-expanded="false" aria-controls="nombre">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </a>
    </div>

    <div class="collapse" id="nombre">
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> face </span>
        <span class="pr-1 text-success">.</span>
        Nombre
      </h3>
      <%= f.input :nombre,
        label: false,
        placeholder: "|...",
        input_html: { class: "bg-input"}
      %>
      <a class="btn btn-danger rounded-circle mt-3 float-right mb-3" data-bs-toggle="collapse" href="#edad" aria-expanded="false" aria-controls="edad">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </a>
    </div>

    <div class="collapse" id="edad">
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> sentiment_satisfied </span>
        <span class="pr-1 text-success">.</span>
        Edad
      </h3>
      <%= f.input :edad,
        label: false,
        placeholder: "|...",
        input_html: { class: "bg-input"}
      %>
      <a class="btn btn-danger rounded-circle mt-3 float-right mb-3" data-bs-toggle="collapse" href="#sexo" aria-expanded="false" aria-controls="sexo">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </a>
    </div>

    <div class="collapse" id="sexo">
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> diversity_3 </span>
        <span class="pr-1 text-success">.</span>
        Sexo
      </h3>
      <%= f.input :sexo,
        label: false,
        as: :radio_buttons,
        collection: [['femenino', 'Femenino'],['masculino', 'Masculino']],
        label_method: :second,
        value_method: :first,
        item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
      %>
      <button class="btn btn-danger rounded-circle mt-3 float-right mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#escolaridad" aria-expanded="false" aria-controls="escolaridad">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </button>
    </div>

    <div class="collapse" id="escolaridad">
      <div class="form_radio-group">
        <h3 class="text-white pb-1 pt-3 d-flex">
          <span class="material-symbols-outlined p-1"> school </span>
          <span class="pr-1 text-success">.</span>
          Escolaridad
        </h3>
        <%= f.input :escolaridad,
          as: :radio_buttons,
          collection: [['Primaria', 'Primaria'], ['Secundaria', 'Secundaria'], ['Preparatoria', 'Preparatoria'], ['Universidad', 'Universidad'], ['Postgrado', 'Postgrado']],
          label_method: :second,
          value_method: :first,
          item_wrapper_class: "btn btn-outline-danger btn-group px-2 m-1"
        %>
        <button class="btn btn-danger rounded-circle mt-3 float-right mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#pais" aria-expanded="false" aria-controls="pais">
          <span class="material-symbols-outlined pt-2">
            arrow_downward
          </span>
        </button>
      </div>
    </div>

    <div class="collapse" id="pais">
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> flag </span>
        <span class="pr-1 text-success">.</span>
        Dónde vives
      </h3>
      <div class="d-flex justify-content-around">
        <%= f.input :pais,
          label: false,
          placeholder: "País",
          input_html: { class: "bg-input"}
        %>
        <%= f.input :ciudad,
          label: false,
          placeholder: "Ciudad",
          input_html: { class: "bg-input"}
        %>
      </div>
      <a class="btn btn-danger rounded-circle mt-3 float-right mb-3" data-bs-toggle="collapse" href="#localidad" aria-expanded="false" aria-controls="localidad">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </a>
    </div>

    <div class="collapse" id="localidad">
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> home </span>
        <span class="pr-1 text-success">.</span>
        Localidad
      </h3>
      <%= f.input :localidad,
        as: :radio_buttons,
        collection: [['Rural', 'Rural'], ['Urbana', 'Urbana']],
        label_method: :second,
        value_method: :first,
        label: false,
        item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
      %>
      <button class="btn btn-danger rounded-circle mt-3 float-right mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#peso" aria-expanded="false" aria-controls="peso">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </button>
    </div>

    <div class="collapse" id="peso">
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> emoji_people </span>
        <span class="pr-1 text-success">.</span>
        Tu complexión
      </h3>
      <div class="d-flex justify-content-around">
        <%= f.input :peso,
          label: false,
          placeholder: "Peso (kg)",
          input_html: { class: "bg-input"}
        %>
        <%= f.input :altura,
          label: false,
          placeholder: "Estatura (m)",
          input_html: { class: "bg-input"}
        %>
      </div>
      <a class="btn btn-danger rounded-circle mt-3 float-right mb-3" data-bs-toggle="collapse" href="#alimentacion_sana" aria-expanded="false" aria-controls="alimentacion_sana">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </a>
    </div>

    <div class="collapse" id="alimentacion_sana">
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> spa </span>
        <span class="pr-1 text-success">.</span>
        ¿Crees que tu alimentación es sana?
      </h3>
      <%= f.input :alimentacion_sana,
        as: :radio_buttons,
        collection: [['Si', 'Si'], ['No', 'No'], ['No se', 'No se']],
        label_method: :second,
        value_method: :first,
        item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
      %>
      <button class="btn btn-danger rounded-circle mt-3 float-right mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#alimentacion_dana_ambiente" aria-expanded="false" aria-controls="alimentacion_dana_ambiente">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </button>
    </div>

    <div class="collapse" id="alimentacion_dana_ambiente">
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> grass </span>
        <span class="pr-1 text-success">.</span>
        ¿Cuánto consideras que tu alimentación daña el medio ambiente?
      </h3>
      <%= f.input :alimentacion_dana_ambiente,
        as: :radio_buttons,
        collection: [['Nada', 'Nada'], ['Poco', 'Poco'], ['Mucho', 'Mucho'], ['No se', 'No se']],
        label_method: :second,
        value_method: :first,
        item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
      %>
      <button class="btn btn-danger rounded-circle mt-3 float-right mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#persona_actividad" aria-expanded="false" aria-controls="persona_actividad">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </button>
    </div>

    <div class="collapse" id="persona_actividad">
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> directions_run </span>
        <span class="pr-1 text-success">.</span>
        ¿Te consideras una persona?
      </h3>
      <%= f.input :persona_actividad,
        label: "¿Te consideras una persona?",
        as: :radio_buttons,
        collection: [['Sedentaria', 'Sedentaria'], ['Fisicamente activa', 'Fisicamente activa'], ['Deportista', 'Deportista']],
        label_method: :second,
        value_method: :first,
        item_wrapper_class: "btn btn-outline-danger btn-group px-2 m-2"
      %>
      <button class="btn btn-danger rounded-circle mt-3 float-right mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#actividad_fisica" aria-expanded="false" aria-controls="actividad_fisica">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </button>
    </div>

    <div class="collapse" id="actividad_fisica">
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> directions_bike </span>
        <span class="pr-1 text-success">.</span>
        ¿Con qué frecuencia realizas actividad física a la semana?
      </h3>
      <%= f.input :actividad_fisica,
        as: :radio_buttons,
        collection: [[0, 'Ninguna'], [1, 'Una vez'], [2, '2-3 veces'], [3, '4-5 veces'], [4, 'Diario']],
        label_method: :second,
        value_method: :first,
        item_wrapper_class: "btn btn-outline-danger btn-group px-2 m-2"
      %>
      <button class="btn btn-danger rounded-circle mt-3 float-right mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#persona_actividad" aria-expanded="false" aria-controls="persona_actividad">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </button>
    </div>

    <div id="padecimientos">
      <h3 class="text-white pb-1 pt-3 d-flex">
        <span class="material-symbols-outlined p-1"> medical_information </span>
        <span class="pr-1 text-success">.</span>
        Padeces...
      </h3>
      <h5 class="text-white text-center pb-1 pt-3">Sobrepeso</h5>
      <div class="d-flex justify-content-center">
        <%= f.input :sobrepeso,
          as: :radio_buttons,
          collection: [['Si', 'Si'], ['No', 'No'], ['No se', 'No se']],
          label_method: :second,
          value_method: :first,
          item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
        %>
      </div>
      <h5 class="text-white text-center pb-1 pt-3">Obesidad</h5>
      <div class="d-flex justify-content-center">
      <%= f.input :obesidad,
        as: :radio_buttons,
        collection: [['Si', 'Si'], ['No', 'No'], ['No se', 'No se']],
        label_method: :second,
        value_method: :first,
        item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
      %>
      </div>
      <h5 class="text-white text-center pb-1 pt-3">Hipertensión</h5>
      <div class="d-flex justify-content-center">
        <%= f.input :hipertension,
          as: :radio_buttons,
          collection: [['Si', 'Si'], ['No', 'No'], ['No se', 'No se']],
          label_method: :second,
          value_method: :first,
          item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
        %>
      </div>
      <h5 class="text-white text-center pb-1 pt-3">Colesterol</h5>
      <div class="d-flex justify-content-center">
        <%= f.input :colesterol,
          as: :radio_buttons,
          collection: [['Si', 'Si'], ['No', 'No'], ['No se', 'No se']],
          label_method: :second,
          value_method: :first,
          item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
        %>
      </div>
      <h5 class="text-white text-center pb-1 pt-3">Trigliceridos</h5>
      <div class="d-flex justify-content-center">
        <%= f.input :trigliceridos,
          as: :radio_buttons,
          collection: [['Si', 'Si'], ['No', 'No'], ['No se', 'No se']],
          label_method: :second,
          value_method: :first,
          item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
        %>
      </div>
      <h5 class="text-white text-center pb-1 pt-3">Diabetes</h5>
      <div class="d-flex justify-content-center">
        <%= f.input :diabetes,
          as: :radio_buttons,
          collection: [['Si', 'Si'], ['No', 'No'], ['No se', 'No se']],
          label_method: :second,
          value_method: :first,
          item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
        %>
      </div>
      <button class="btn btn-danger rounded-circle mt-3 float-right mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#persona_actividad" aria-expanded="false" aria-controls="persona_actividad">
        <span class="material-symbols-outlined pt-2">
          arrow_downward
        </span>
      </button>
    </div>


  <div class="form-inputs">

    <h3>Diabetes Mellitus</h3>
    <p>Si contestó "no sé" en la pregunta sobre diabetes mellitus responda lo siguiente:</p>
    <h5 class="text-white text-center pb-1 pt-3">¿Le han detectado alguna vez niveles altos de glucosa en sangre?</h5>
    <div class="d-flex justify-content-center">
    <%= f.input :glucosa,
      as: :radio_buttons,
      collection: [['Si', 'Si'], ['No', 'No'], ['No se', 'No se']],
      label_method: :second,
      value_method: :first,
      item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
    %>
    </div>
    <h5 class="text-white text-center pb-1 pt-3">¿Ha habido algún diagnóstico de diabetes mellitus en su familia?</h5>
    <div class="d-flex justify-content-center">
    <%= f.input :diabetes_familia,
      as: :radio_buttons,
      collection: [['Si', 'Si'], ['No', 'No'], ['No se', 'No se']],
      label_method: :second,
      value_method: :first,
      item_wrapper_class: "btn btn-outline-danger btn-group px-2 mx-2"
    %>
    </div>
    <h5 class="text-white text-center pb-1 pt-3">¿Ha presentado alguno de los siguientes síntomas en el último mes?</h5>
    <%= f.input :necesidad_orinar, label: "Necesidad de orinar con frecuencia" %>
    <%= f.input :perdida_peso, label: "Perdida de peso inexplicable" %>
    <%= f.input :sed_excesiva %>
    <%= f.input :hambre_excesiva %>
    <%#= f.input :diabetes_sintomas, label: "¿Ha presentado alguno de los siguientes síntomas en el último mes?", as: :check_boxes, collection: [['Necesidad de orinar con frecuencia', 'Necesidad de orinar con frecuencia'], ['Perdida de peso inexplicable', 'Perdida de peso inexplicable'], ['Sed excesiva', 'Sed excesiva'], ['Hambre excesiva', 'Hambre excesiva']] %>

    <%= image_tag "veggies.png", class: "dieta-pic" %>

    <div id="dieta">
      <h3 class="text-white pb-1 pt-3">Tus preferencias alimentarias</h3>
      <%= f.input :dieta,
        as: :radio_buttons,
        collection: [['Vegetariana estricta', 'Vegetariana estricta'], ['Lactovegetarianas', 'Lactovegetarianas'], ['Lactoovovegetarianas', 'Lactoovovegetarianas'], ['Omnívoras (me alimento de plantas y animales)', 'Omnívoras (me alimento de plantas y animales)']],
        label_method: :second,
        value_method: :first,
        item_wrapper_class: "btn btn-outline-danger btn-group px-2 m-2"
